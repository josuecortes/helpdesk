<% content_for :titulo do %>
  Usuários
<% end %>

<% content_for :sub_titulo do %>
  Editando Conta
<% end %>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, :label=>"E-mail", required: true, autofocus: true %>

    <%= f.input :name, :label=>"Nome", required: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Atualmente aguardando confirmação para: <%= resource.unconfirmed_email %></p>
    <% end %>

    <fieldset class="fieldsetcomborda">
      <p><strong>* Deixe estes campos em branco se você não quiser alterar sua senha.</strong></p>
      <%= f.input :password, :label=>"Nova Senha", autocomplete: "off", hint: "deixe em branco se você não quer mudá-lo", required: false %>
      <%= f.input :password_confirmation, :label=>"Confirmar Nova Senha", required: false %>
        
    </fieldset>    
    
    <%= f.input :mudar_senha, :input_html=>{:value=>false}, as: :hidden %>

    <%= f.input :current_password, :label=>"Senha Atual", hint: "precisamos de sua senha atual para confirmar as alterações", required: true %>
  </div>



  <div class="form-actions">
    <%= f.button :submit, "Atualizar", :class=>"btn btn-primary" %>
    <%= link_to "Voltar", :back, :class=>'btn btn-default' %>
  </div>
<% end %>

